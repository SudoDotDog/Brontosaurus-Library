<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="<%= author %>">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" type="image/png" href="<%= favicon %>">
    <title><%= title %></title>
</head>

<style>
    html,
    body,
    .container {
        height: 100%;
    }

    html,
    body,
    div {
        padding: 0;
        margin: 0;
        font-family: "Helvetica Neue", Helvetica, 'Segoe UI', Tahoma, Verdana, "Microsoft Yahei", "Hiragino Sans GB", "Heiti SC", "WenQuanYi Micro Hei", Arial;
    }

    .container {
        box-sizing: border-box;
        width: 100%;
        display: grid;
        grid-template-areas:
            "title article"
            "navigation article";
        column-gap: 5px;
        row-gap: 5px;
        grid-template-columns: auto 1fr;
        grid-template-rows: auto 1fr;
    }

    .title-area {
        grid-area: title;
        padding-left: 15px;
        padding-top: 15px;
        width: 20vw;
        max-width: 300px;
        min-width: 200px;

        display: flex;
    }

    .title {
        line-height: 35px;
        font-size: 30px;
        font-weight: bold;
    }

    .expend-button {
        flex: 1;
        display: none;
        font-weight: bold;
        text-align: right;
        margin-right: 50px;
        font-size: 50px;
    }

    .cancel-button {
        display: none;
        font-weight: bold;
        font-size: 50px;
        margin-left: 20px;
        margin-top: 10px;
    }

    .navigation-area {
        grid-area: navigation;
        overflow: auto;
        padding-left: 15px;
        padding-bottom: 15px;
        width: 20vw;
        max-width: 300px;
        min-width: 200px;
        -webkit-overflow-scrolling: touch;
    }

    .navigation-content {
        padding: 0px;
    }

    .article-area {
        font-size: 17px;
        padding-right: 15px;
        line-height: 22px;
        overflow: auto;
        grid-area: article;
        -webkit-overflow-scrolling: touch;
    }

    @media print {

        html,
        body,
        .container,
        .title-area,
        .article-area {
            display: block;
            margin: 0;
            padding: 0;
            overflow: visible;
            height: auto;
        }

        .container {
            overflow: hidden;
            grid-template-areas:
                "title"
                "article";
            grid-template-columns: 1fr;
            grid-template-rows: 1fr;
        }

        .navigation-area {
            display: none;
        }
    }

    @media only screen and (max-width: 1000px) {

        html,
        body,
        .container,
        .title-area,
        .article-area {
            height: auto;
        }

        .container {
            overflow: hidden;
            grid-template-areas:
                "title navigation"
                "article navigation";
            grid-template-columns: 100vw auto;
            grid-template-rows: 1fr auto;
        }

        .container.open {
            touch-action: none;
            -ms-touch-action: none;
        }

        .title-area {
            padding-bottom: 10px;
            width: 100vw;
            max-width: 100vw;
            min-width: 100vw;
        }

        .expend-button {
            display: block;
        }

        .cancel-button {
            display: block;
        }

        .navigation-content {
            padding: 10px;
        }

        .navigation-area {
            grid-area: navigation;
            position: fixed;
            z-index: 50;
            background-color: white;
            right: -100vw;
            top: 0;
            width: 100vw;
            height: 100vh;
            max-width: 100vw;
            min-width: 100vw;
            visibility: hidden;
            transition: 0.3s all;
        }

        .navigation-area.open {
            visibility: visible;
            right: 0;
        }

        .navigation-content {
            padding-bottom: 150px;
        }

        .article-area {
            padding-left: 15px;
        }
    }
</style>

<style>
    <%- styleSheet %>
</style>

<body>
    <div id="container" class="container">
        <header class="title-area">
            <div class="title"><%- header.replace(/ /g, '\<br>') %></div>
            <div class="expend-button" id="expend-button">⇋</div>
        </header>
        <nav id="navigation" class="navigation-area">
            <div class="cancel-button" id="cancel-button">⇋</div>
            <div class="navigation-content" id="navigation-content">
                <%- include(navigationPath, {
                    trees: tree.children,
                    parseLink: parseLink,
                }); %>
            </div>
        </nav>
        <article class="article-area style-sheet"><%- article %></article>
    </div>
</body>

<script>
    let isOpen = false;
    const openNav = () => {
        document.getElementById('navigation').classList.add('open');
        document.getElementById('container').classList.add('open');
        isOpen = true;
    };
    const closeNav = () => {
        document.getElementById('navigation').classList.remove('open');
        document.getElementById('container').classList.remove('open');
        isOpen = false;
    };
    const bodyMouseMove = (e) => {
        if (isOpen) {
            const content = document.getElementById('navigation');
            if (content.scrollTop + content.clientHeight === content.scrollHeight) {
                e.preventDefault();
                return;
            }

            const classes = [...e.target.classList];
            if (classes.includes('link')
                || classes.includes('article')
                || classes.includes('category')) {
                return;
            }
            e.preventDefault();
        }
    };

    document.getElementById('expend-button').addEventListener('click', openNav);
    document.getElementById('cancel-button').addEventListener('click', closeNav);
    document.getElementById('container').addEventListener('touchmove', bodyMouseMove);
</script>

</html>